<UserControl x:Class="SwyxSharp.UserInterface.SidePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SwyxSharp.UserInterface"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mi="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <ui:Button Width="84" Margin="0,0,0,5" Padding="0,8,0,8">
                <StackPanel>
                    <mi:MaterialIcon Kind="Call" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Width="24"/>
                    <TextBlock Text="Kurzwahlen" FontSize="12"/>
                </StackPanel>
            </ui:Button>

            <ui:Button Width="84" Margin="0,5,0,5" Padding="0,8,0,8">
                <StackPanel>
                    <mi:MaterialIcon Kind="ContactPhone" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Width="24"/>
                    <TextBlock Text="Telefonbuch" FontSize="12"/>
                </StackPanel>
            </ui:Button>

            <ui:Button Width="84" Margin="0,5,0,5" Padding="0,8,0,8">
                <StackPanel>
                    <mi:MaterialIcon Kind="Journal" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Width="24"/>
                    <TextBlock Text="Rufjournal" FontSize="12"/>
                </StackPanel>
            </ui:Button>

            <ui:Button Width="84" Margin="0,5,0,5" Padding="0,8,0,8">
                <StackPanel>
                    <mi:MaterialIcon Kind="Voicemail" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Width="24"/>
                    <TextBlock Text="Voice Box" FontSize="12"/>
                </StackPanel>
            </ui:Button>

            <ui:Button Width="84" Margin="0,5,0,0" Padding="0,8,0,8">
                <StackPanel>
                    <mi:MaterialIcon Kind="RecordCircleOutline" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Width="24"/>
                    <TextBlock Text="Aufnahmen" FontSize="12"/>
                </StackPanel>
            </ui:Button>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <ui:Button>
                <mi:MaterialIcon Kind="Person" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Width="24"/>
            </ui:Button>
            <ui:Button Margin="0,5,0,0">
                <mi:MaterialIcon Kind="Settings" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Width="24"/>
            </ui:Button>
        </StackPanel>
    </Grid>
</UserControl>
