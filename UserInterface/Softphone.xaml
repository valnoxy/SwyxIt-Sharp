<UserControl x:Class="SwyxSharp.UserInterface.Softphone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SwyxSharp.UserInterface"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:wpf="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300">
    <Grid RowDefinitions="Auto,Auto,Auto,*">

        <StackPanel Grid.Row="0">
            <ui:TextBlock FontTypography="Subtitle" FontWeight="Bold" Text="Softphone" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="0,0,0,10"/>
            <Grid ColumnDefinitions="*,Auto" >
                <ui:TextBox PlaceholderText="Rufnummer" Grid.Column="0" x:Name="CallBlock" KeyDown="CallBlock_OnKeyDown"/>
                <ui:Button Icon="{ui:SymbolIcon Call24}" Appearance="Success" Grid.Column="1" Margin="10,0,0,0" Height="36" Click="DialNumber_Click"/>
            </Grid>
        </StackPanel>

        <StackPanel Margin="0,20,0,0" Grid.Row="1">
            <ui:Card Padding="5">
                <Grid ColumnDefinitions="6,48,*">
                    <Border Width="10" Height="70"
                            Margin="-5,-10,0,-10"
                            Background="#bc99d6" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Left" 
                            CornerRadius="3,0,0,3"
                            x:Name="ActiveBorderLine1"
                            Grid.Column="0"/>
                    <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                        <wpf:MaterialIcon Kind="CallOutline" Width="24"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="10,0">
                        <ui:TextBlock FontWeight="Bold" Text="Leitung 1"/>
                        <ui:TextBlock Text="Inaktiv" x:Name="Line1State"/>
                        <ui:TextBlock Text="" x:Name="Line1Caller"/>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <ui:Card Padding="5" Margin="0,5,0,0">
                <Grid ColumnDefinitions="6,48,*">
                    <Border Width="10" Height="70"
                            Margin="-5,-10,0,-10"
                            Background="#bc99d6" 
                            VerticalAlignment="Stretch" 
                            HorizontalAlignment="Left" 
                            CornerRadius="3,0,0,3"
                            Grid.Column="0"
                            x:Name="ActiveBorderLine2"
                            Visibility="Hidden"/>
                    <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                        <wpf:MaterialIcon Kind="CallOutline" Width="24"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="10,0">
                        <ui:TextBlock FontWeight="Bold" Text="Leitung 2"/>
                        <ui:TextBlock Text="Inaktiv" x:Name="Line2State"/>
                        <ui:TextBlock Text="" x:Name="Line2Caller"/>
                    </StackPanel>
                </Grid>
            </ui:Card>
        </StackPanel>

        <StackPanel Margin="0,30,0,0" Grid.Row="2">
            <ui:Card Padding="0" Visibility="Visible" x:Name="CallCard">
                <Grid RowDefinitions="*,*,*,*">
                    <!-- Title -->
                    <Border Grid.Row="0" Background="#bc99d6" CornerRadius="3,3,0,0">
                        <Grid>
                            <ui:TextBlock Text="Leitung 1" Foreground="Black" HorizontalAlignment="Left" Padding="8,8,0,8"/>
                            <ui:TextBlock Text="{Binding TimePassed}" Foreground="Black" HorizontalAlignment="Right" Padding="0,8,8,8"/>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="0,5,0,0">
                        <ui:TextBlock Text="" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,8,0,0" x:Name="CallerName"/>
                        <ui:TextBlock Text="" HorizontalAlignment="Center" Margin="0,0,0,8" x:Name="CallerNumber"/>
                    </StackPanel>

                    <!-- Actions -->
                    <Grid Grid.Row="2" Margin="5,5,5,0" Grid.RowDefinitions="*,*" Grid.ColumnDefinitions="*,*,*">
                        <ui:Button Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Width="85" Margin="0,0,0,5">
                            <StackPanel>
                                <ui:SymbolIcon Symbol="Mic24" FontSize="24"/>
                                <ui:TextBlock Text="Mikrofon"/>
                            </StackPanel>
                        </ui:Button>
                        <ui:Button Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Width="85" Margin="0,0,0,5">
                            <StackPanel>
                                <ui:SymbolIcon Symbol="Speaker224" FontSize="24"/>
                                <ui:TextBlock Text="Audio"/>
                            </StackPanel>
                        </ui:Button>
                        <ui:Button Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" Width="85" Margin="0,0,0,5">
                            <StackPanel>
                                <ui:SymbolIcon Symbol="ArrowTurnRight24" FontSize="24"/>
                                <ui:TextBlock Text="Übergabe"/>
                            </StackPanel>
                        </ui:Button>
                        <ui:Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Width="85">
                            <StackPanel>
                                <ui:SymbolIcon Symbol="ConferenceRoom24" FontSize="24"/>
                                <ui:TextBlock Text="Konferenz"/>
                            </StackPanel>
                        </ui:Button>
                        <ui:Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Width="85">
                            <StackPanel>
                                <ui:SymbolIcon Symbol="Dialpad24" FontSize="24"/>
                                <ui:TextBlock Text="Wähltasten"/>
                            </StackPanel>
                        </ui:Button>
                        <ui:Button Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Width="85">
                            <StackPanel>
                                <ui:SymbolIcon Symbol="MoreVertical24" FontSize="24"/>
                                <ui:TextBlock Text="Weitere"/>
                            </StackPanel>
                        </ui:Button>
                    </Grid>

                    <!-- Hold & End Call -->
                    <Grid Grid.Row="3" Margin="0,15,0,10" Grid.ColumnDefinitions="*,*">
                        <ui:Button Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Width="50" Margin="0,0,10,5" Icon="{ui:SymbolIcon Pause24}" Height="40" FontSize="24" Click="HoldCall_Click" x:Name="HoldCallBtn"/>
                        <ui:Button Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Width="50" Margin="10,0,0,5" Icon="{ui:SymbolIcon CallEnd24}" Height="40" FontSize="24" Appearance="Danger" Click="EndCall_Click"/>
                    </Grid>
                </Grid>
            </ui:Card>
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom" Grid.Row="3" Margin="0,0,0,15">
            <ui:Card Padding="10">
                <Grid ColumnDefinitions="*,*,*,*,*">
                    <ui:Button Icon="{ui:SymbolIcon CallForward24}" FontSize="20" Padding="4" Grid.Column="0" HorizontalAlignment="Center" Click="CallForward_Click" MouseRightButtonDown="CallForward_RightClick"/>
                    <ui:Button Icon="{ui:SymbolIcon Incognito24}" FontSize="20" Padding="4" Grid.Column="1" HorizontalAlignment="Center"/>
                    <ui:Button Icon="{ui:SymbolIcon CallProhibited24}" FontSize="20" Padding="4" Grid.Column="2" HorizontalAlignment="Center"/>
                    <ui:Button Icon="{ui:SymbolIcon PhoneDesktop24}" FontSize="20" Padding="4" Grid.Column="3" HorizontalAlignment="Center"/>
                    <ui:Button Icon="{ui:SymbolIcon MicSettings24}" FontSize="20" Padding="4" Grid.Column="4" HorizontalAlignment="Center"/>
                </Grid>
            </ui:Card>
        </StackPanel>
    </Grid>
</UserControl>
