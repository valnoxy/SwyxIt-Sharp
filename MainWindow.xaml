<ui:FluentWindow x:Class="SwyxSharp.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:SwyxSharp"
                 mc:Ignorable="d"
                 Title="SwyxIt! Sharp" Height="800" Width="1300"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:userInterface="clr-namespace:SwyxSharp.UserInterface"
                 Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Round">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="SwyxIt! Sharp" FontSize="14">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/IpPbxClient.ico"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <userInterface:SidePanel Grid.Column="0" Margin="10,20,25,20"/>
            <userInterface:Softphone Grid.Column="1"/>
            <userInterface:SpeedDials Grid.Column="2" Margin="25,0,20,0"/>
        </Grid>
    </Grid>
</ui:FluentWindow>